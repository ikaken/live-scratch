{
  "$schema": "https://raw.githubusercontent.com/nicedoc/tauri/refs/heads/dev/crates/tauri-utils/schema.json",
  "productName": "Live Scratch",
  "version": "0.1.0",
  "identifier": "com.live-scratch.app",
  "build": {
    "frontendDist": "../scratch-editor/packages/scratch-gui/build",
    "beforeBundleCommand": "cd src-tauri && bash cleanup-build.sh"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Live Scratch",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: blob: data:; media-src 'self' asset: blob: data:; connect-src 'self' ipc: http://ipc.localhost; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../default-project/*"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
